<?xml version="1.0"?>
<SyntaxDefinition name="C#" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
  <Color name="Comment" foreground="LightGreen" />

  <RuleSet>
    <Span color="Comment" begin=";" />

    <!-- X-Axis-->
    <Rule foreground="DarkRed">
      X\d*(\.\d*)?
    </Rule>

    <!-- Y-Axis-->
    <Rule foreground="DarkBlue">
      Y\d*(\.\d*)?
    </Rule>

    <!-- Z-Axis-->
    <Rule foreground="DarkGreen">
      Z\d*(\.\d*)?
    </Rule>

    <!-- X-Axis-->
    <Rule foreground="DarkOrange">
      E\d*(\.\d*)?
    </Rule>

  </RuleSet>
</SyntaxDefinition>