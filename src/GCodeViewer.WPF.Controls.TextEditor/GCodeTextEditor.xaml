<UserControl
    x:Class="GCodeViewer.WPF.Controls.TextEditor.GCodeTextEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Color x:Key="MiddleDarkGray">#3E3E42</Color>
        <SolidColorBrush x:Key="ScrollbarBackgroundColor" Color="{StaticResource MiddleDarkGray}" />

        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Background="#9E9E9E" CornerRadius="2" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid Background="{StaticResource ScrollbarBackgroundColor}">
                            <Grid.RowDefinitions>
                                <RowDefinition MaxHeight="15" />
                                <RowDefinition Height="0.00001*" />
                                <RowDefinition MaxHeight="15" />
                            </Grid.RowDefinitions>
                            <Border Grid.RowSpan="3" />
                            <RepeatButton Grid.Row="0" Command="ScrollBar.LineUpCommand" />
                            <Track
                                x:Name="PART_Track"
                                Grid.Row="1"
                                IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb Margin="1,0,1,0" Style="{StaticResource ScrollBarThumb}" />
                                </Track.Thumb>
                            </Track>
                            <RepeatButton Grid.Row="3" Command="ScrollBar.LineDownCommand" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <avalonEdit:TextEditor
            x:Name="TextEditor"
            Background="#1e1e1e"
            Foreground="LightGray"
            ShowLineNumbers="True"
            WordWrap="True" />
    </Grid>
</UserControl>
