<Window
    x:Class="OpenGLTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpenGLTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:opengl="clr-namespace:OpenGL;assembly=OpenGL.Net.WinForms"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <WindowsFormsHost x:Name="HostControl" Margin="0,20,0,0">
            <opengl:GlControl ContextCreated="GlControl_ContextCreated" Render="GlControl_Render" />
        </WindowsFormsHost>
    </Grid>
</Window>
