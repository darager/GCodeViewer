<Page
    x:Class="GCodeViewer.WPF.Pages.StartingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GCodeViewer.WPF.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="StartingPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Margin="10" VerticalAlignment="Center">
        <Button Command="{Binding GoToSettingsPage}">Settings</Button>
        <Button Command="{Binding StartSlicingWorkflow}">Create a GCode File</Button>
        <Button Command="{Binding OpenGCodeFile}">Edit and existing GCode File</Button>
    </StackPanel>
</Page>
