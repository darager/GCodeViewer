<Window
    x:Class="GCodeViewer.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GCodeViewer.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:texteditor="clr-namespace:GCodeViewer.WPF.Controls.TextEditor;assembly=GCodeViewer.WPF.Controls.TextEditor"
    xmlns:viewer3D="clr-namespace:GCodeViewer.WPF.Controls.PointCloud;assembly=GCodeViewer.WPF.Controls.PointCloud"
    Title="MainWindow"
    Width="1600"
    Height="800"
    mc:Ignorable="d">
    <Grid Background="DarkGray" DockPanel.Dock="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <viewer3D:Viewer3D
            x:Name="Viewer3D"
            Grid.Column="0"
            Renderables="{Binding PointCloudObjects}" />

        <GridSplitter
            Grid.Column="1"
            Width="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="#1e1e1e" />

        <Frame
            x:Name="Frame"
            Grid.Column="2"
            Content="{Binding Page}"
            NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
