<Page
    x:Class="GCodeViewer.WPF.TextEditor.TextEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:editor="clr-namespace:GCodeViewer.WPF.Controls.TextEditor;assembly=GCodeViewer.WPF.Controls.TextEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TextEditorPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.InputBindings>
        <KeyBinding
            Key="o"
            Command="{Binding OpenFile}"
            Modifiers="Ctrl" />
        <KeyBinding
            Key="s"
            Command="{Binding SaveFile}"
            Modifiers="Ctrl" />
        <KeyBinding Key="F5" Command="{Binding PreviewPrintingPositions}" />
    </Page.InputBindings>

    <DockPanel>
        <StackPanel
            Height="25"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <Button Command="{Binding OpenFile}">Open</Button>
            <Button Command="{Binding SaveFile}">Save</Button>
            <Button Command="{Binding SaveFileAs}">Save As</Button>
            <Button Command="{Binding CloseFile}">Close</Button>
            <Button Command="{Binding GoToSettingsPage}">Settings</Button>
            <Button Command="{Binding PreviewPrintingPositions}">Render Positions</Button>
        </StackPanel>

        <editor:GCodeTextEditor
            x:Name="textEditor"
            DockPanel.Dock="Bottom"
            TextChanged="{Binding HandleTextChanged}" />
    </DockPanel>
</Page>
