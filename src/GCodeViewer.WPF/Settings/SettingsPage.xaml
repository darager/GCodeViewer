<Page
    x:Class="GCodeViewer.WPF.Settings.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:GCodeViewer.WPF.Controls;assembly=GCodeViewer.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Center">
        <Button Command="{Binding GoBack}" Style="{StaticResource GoBackButton}" />
        <Label HorizontalAlignment="Center">Settings</Label>

        <Label FontWeight="Bold">Dimensions:</Label>
        <Grid HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Right"
                Content="Printbed Diameter:" />

            <ctrl:NumericUpDown
                Grid.Row="0"
                Grid.Column="1"
                Width="100"
                MaxValue="2000"
                MinValue="1"
                Value="{Binding PrintBedDiameter}" />
            <Label Grid.Row="0" Grid.Column="2">mm</Label>

            <Label
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Right"
                Content="Printvolume Height:" />
            <ctrl:NumericUpDown
                Grid.Row="1"
                Grid.Column="1"
                Width="100"
                MaxValue="2000"
                MinValue="1"
                Value="{Binding PrintVolumeHeight}" />
            <Label Grid.Row="1" Grid.Column="2">mm</Label>

            <Label
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Right"
                Content="A-Axis offset:" />
            <ctrl:NumericUpDown
                Grid.Row="2"
                Grid.Column="1"
                Width="100"
                MaxValue="2000"
                MinValue="1"
                Value="{Binding AAxisOffset}" />
            <Label
                Grid.Row="2"
                Grid.Column="2"
                Foreground="Orange">
                mm
            </Label>
        </Grid>

        <Button Margin="0,50,0,0" Command="{Binding SaveAndApplySettings}">Apply</Button>
    </StackPanel>
</Page>
