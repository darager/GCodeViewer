<UserControl
    x:Class="GCodeViewer.Views.Controls.DarkThemeTextEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GCodeViewer.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="{StaticResource BackgroundColor}">
        <ScrollBar
            Height="20"
            HorizontalAlignment="Stretch"
            DockPanel.Dock="Bottom" />
    </DockPanel>

</UserControl>
